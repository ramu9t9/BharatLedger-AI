# BharatLedger AI - Environment Template
# Copy to .env and fill in values

# Database (use psycopg driver for sync SQLAlchemy)
DATABASE_URL=postgresql+psycopg://bharatledger:bharatledger@localhost:5432/bharatledger

# Redis (for Celery and caching)
REDIS_URL=redis://localhost:6379/0

# App security
SECRET_KEY=generate-a-secure-random-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI / LLM (OpenRouter or OpenAI)
OPENROUTER_API_KEY=sk-or-v1-...
# OPENAI_API_KEY=sk-...  # Alternative

# Optional: S3-compatible storage (MinIO or AWS)
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET=bharatledger-invoices

# Optional: Google Vision for better OCR
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# App
DEBUG=false
ENV=development
